<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Buttons Styles -->
    <style name="button1Style" parent="Theme.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text_button_1</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:background">@drawable/button_1</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="button2Style" parent="Theme.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text_button_1</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:background">@drawable/button_2</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <!-- TextApp Styles -->
    <style name="txtLabel" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/color_labelForm</item>
    </style>

    <style name="txtH1" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/color_labelForm</item>
    </style>

    <style name="txtH2" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/color_labelForm</item>
    </style>

    <style name="txtH3" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/color_labelForm</item>
    </style>

    <style name="txtH4" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/color_labelForm</item>
    </style>


    <!-- Profile and PanelPrincipal Styles -->

    <style name="profileTable_row" parent="Theme.AppCompat">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="profileTable_Label" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/cl_panelProfileTable_label</item>
        <item name="android:textSize">16dp</item>
<!--        <item name="android:height">wrap_content</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="profileTable_TextValue" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/cl_panelProfileTable_textValue</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="profile_titleM2" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/color_principal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="profile_listItems_header" parent="Theme.AppCompat">
        <item name="android:background">@color/cl_panelProfileListItems_header</item>
        <item name="android:textColor">@color/cl_panelProfileListItems_headertxt</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- PanelVacunas Styles -->

    <style name="panelvacunas_labelitem" parent="Theme.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="panelvacunas_dataitem" parent="Theme.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!-- Panel RegistroVac -->
    <style name="panelvacunas_regitem" parent="Theme.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textColorHint">#7E919A</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>